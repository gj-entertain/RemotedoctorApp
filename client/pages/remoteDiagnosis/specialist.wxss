/* client/pages/remoteDiagnosis/specialist.wxss */
@import "stylesheet.wxss";
.container{
  height:100%;
  display:flex;
  flex-direction:row;
  align-items:flex-start;
  justify-content:flex-start;
}
.left-container{
  width:300rpx;
}

.right-container{
  width:100%;
  padding-left:20rpx;
  padding-bottom:30rpx;
  padding-right:20rpx;
}

.doctor{
  width:100%;
  text-align: center;
  height:200rpx;
  line-height: 200rpx;
  border-bottom:4rpx solid white;
  border-right:4rpx solid white;
  background-color: #FCE2A9;
  font-weight: bold;
  padding:5rpx;
}

.cur-doctor{
  background-color:white;
  border-right:none;
}

.doctor-info{
  border:3rpx solid #CCC;
  box-shadow: 3px 3px 3px rgba(0, 0, 0, 0.2);
  display: grid;
	grid-template-columns: 1fr;
  /* line-height: 50px; */
  padding-left:10px;
  margin-top:20px;
  background-color:white;
}

.contact-info{
  margin-top:50rpx;
  margin-bottom:50rpx;
  border:3rpx solid #CCC;
  box-shadow: 3px 3px 3px rgba(0, 0, 0, 0.2);
  display: grid;
	grid-template-columns: 1fr;
  /* line-height: 50px; */
  padding-left:10px;
  line-height: 60rpx;
  background-color:white;
}

.large-font{
  font-size:20pt;
}

.small-font{
  font-size:10pt;
  color: darkgray;
}


.small-font-black{
  font-size:10pt;
}

.icon-weixin{
  color:#62b900;
}